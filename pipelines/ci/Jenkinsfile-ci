pipeline {
    agent {
        kubernetes {
            // Use dynamic Jenkins agents running as Kubernetes pods
            yaml """
            apiVersion: v1
            kind: Pod
            spec:
              containers:
              - name: docker
                image: docker:20.10.7-dind
                securityContext:
                  privileged: true
                volumeMounts:
                - name: docker-sock-volume
                  mountPath: /var/run/docker.sock
              - name: jnlp
                image: jenkins/inbound-agent
                args:
                - ${computer.jnlpmac}
                - ${computer.name}
              volumes:
              - name: docker-sock-volume
                hostPath:
                  path: /var/run/docker.sock
            """
        }
    }

    environment {
        DOCKER_IMAGE = 'seograth/python-app'
        REGISTRY = 'docker.io'                // Docker Hub registry
        DOCKER_CREDENTIALS_ID = credentials("dockerhub-credentials-id")
    }

    stages {
        stage('Build') {
            steps {
                script {
                    docker.build(DOCKER_IMAGE)
                }
            }
        }
        stage('Push') {
            steps {
                script {
                    docker.withRegistry('https://registry.hub.docker.com', DOCKER_CREDENTIALS_ID) {
                        docker.image(DOCKER_IMAGE).push('latest')
                        // docker.image(DOCKER_IMAGE).push("${env.BUILD_NUMBER}")
                    }
                }
            }
        }
    }
}